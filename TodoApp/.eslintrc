{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true,
    "react-native/react-native": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "plugin:react-native/all"
  ],
  "plugins": ["babel", "flowtype", "react", "react-native"],
  "rules": {
    "no-console": "off",
    "no-var": "error",
    "prefer-const": "error",
    "flowtype/no-types-missing-file-annotation": 0
  }
}
